{
  "manifest_version": 2,

  "name": "ServiceNow Alerts Plus",
  "short_name": "ServiceNow Alerts Plus",
  "description": "This extension shows status of unassigned queue, and provides quick links to Service Now operations.",
  "version": "1.0.0",

  "options_page": "options.html",
  "background": {
    "scripts": ["js/jquery.js","js/background.js"],
    "persistent": true
  },

  "browser_action": {
	"default_title": "ServiceNow Alerts Plus",
    "default_icon": "images/ITSM50.png",
	"default_popup": "popup.html"
  },

  "icons": { "16": "images/ITSM16.png",
             "48": "images/ITSM48.png",
             "128": "images/ITSM128.png" },

  "permissions": [
    "alarms",
	"notifications",
	"tabs",
	"storage",
	"idle",
	"*://*/*"
  ]
}
